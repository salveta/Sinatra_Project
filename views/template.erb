<!DOCTYPE HTML>
<html>
    <head>
        <title>Card Generator second step</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,600" rel="stylesheet" type="text/css" />
        <script src="js/jquery.min.js"></script>
        <script src="js/jquery.dropotron.min.js"></script>
        <script src="js/skel.min.js"></script>
        <script src="js/skel-panels.min.js"></script>
        <script src="js/init.js"></script>
        <noscript>
            <link rel="stylesheet" href="css/skel-noscript.css" />
            <link rel="stylesheet" href="css/style.css" />
            <link rel="stylesheet" href="css/style-n1.css" />
        </noscript>
    </head>
    <body class="homepage">
        <!-- Header Wrapper -->
            <div id="header-wrapper">
                <!-- Hero -->
                    <section id="hero" class="container">
                        <header>
                            <h2>Second step...</h2>
                        </header>
                    </section>
            </div>
                <!-- Footer -->
                    <div id="footer" class="container" style="padding-bottom: 40px; margin-top: 30px;">
                        <header class="major">
                            <h2>Choose your favourite Template</h2>
                        </header>
                        <div class="row">
                            <form action="/templates" method="post" id="carddata" style="padding-left: 180px">
                                 <div class="row">
                                 <div class="col-sm-6 col-lg-4" >
                                  <div class="display" style="border:1px solid #ccc; text-align:center;margin:5px;">
                                       <h3>Template 1</h3>
                                      <img src="/img/display1.png" alt="..." style="height:380px">
                                      <div class="caption" style="padding-top:10; padding-bottom:10px">
                                        <input type="radio" name="template" value="display1">
                                      </div>
                                     </div>
                                  </div>
                                  <div class="col-sm-6 col-lg-4" >
                                       <div class="display" style="border:1px solid #ccc; text-align:center;margin:5px;">
                                           <h3>Template 2</h3>
                                            <img src="/img/display2.png" alt="..." style="height:380px">
                                          <div class="caption" style="padding-top:10; padding-bottom:10px">
                                            <input type="radio" name="template" value="display2">
                                          </div>
                                      </div>
                                    </div>
                                       <div class="col-sm-6 col-lg-4" >
                                         <div class="display" style="border:1px solid #ccc; text-align:center;margin:5px;">
                                             <h3>Template 3</h3>
                                             <img src="/img/display3.png" alt="..." style="height:380px">
                                            <div class="caption" style="padding-top:10; padding-bottom:10px">
                                            <input type="radio" name="template" value="display3">
                                           </div>
                                         </div>
                                       </div>
                                     </div>
                                       <input type="hidden" name="name" value="<%= params[:name] %>">
                                       <input type="hidden" name="place" value="<%= params[:place] %>">
                                       <input type="hidden" name="description" value ="<%= params[:description] %>">
                                       <input type="hidden" name="eventname" value ="<%= params[:eventname] %>">
                                       <input type="hidden" name="eventhour" value ="<%= params[:eventhour] %>">
                                       <div style="text-align:center; padding:10px">
                                       <input type="submit" class="btn" value="Select Template">
                                   </div>
                              </form>
                        </div>
                    </div>
    <!-- Copyright -->
                    <div id="copyright" class="container" style="margin-top: 15px; padding-top: 40px;">
                        <ul class="menu">
